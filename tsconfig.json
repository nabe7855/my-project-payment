{
  "compilerOptions": {
    /* 🎯 基本設定 */
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "noEmit": true,
    "incremental": true,

    /* ⚙️ TypeScriptの動作関連 */
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* 🧩 拡張オプション（AI構成から統合） */
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,

    /* 🛣️ パスエイリアス設定 */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* 🧠 型定義 */
    "types": ["node"],

    /* 🧰 Next.js専用プラグイン */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  /* 📦 コンパイル対象 */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],

  /* 🚫 除外フォルダ */
  "exclude": ["node_modules"]
}
